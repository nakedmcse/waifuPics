<!doctype html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Waifu pics</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="shortcut icon" href="/images/favicon.ico">
    <style>
        .centerIcon {
            width: 100%;
            height: 100%;
        }

        .centerIcon:before {
            width: 100%;
            height: 100%;
            font-size: 5.0em;
            text-align: center;
            display: block;
            line-height: 100px;
        }
        .dz-image{
            border-radius: 0 !important;
        }
        .btnCopy {
            font-size: 14px;
            text-align: center;
            display: block;
            cursor: pointer !important;
            border: none;
        }
        .dropzone .dz-preview.dz-image-preview{
            background: #fff0;
        }
    </style>
</head>
<body>
<main class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card border-primary mb-3">
                <div class="card-header text-center">Upload Image</div>
                <div class="card-body">
                    <p class="card-text text-center">Simple image upload, drag up to 10 files in the box below and they will be uploaded, copy the URL and share!.</p>
                    <div id="uploadDropzone" class="dropzone rounded mb-4 bg-dark border border-success text-white">
                        <i class="bi bi-cloud-arrow-up centerIcon"></i>
                        <div class="fallback">
                            <input name="file" type="file" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
<script>
    const dz = new Dropzone("#uploadDropzone", {
        url: "/upload",
        method: "PUT",
        uploadMultiple: false,
        addRemoveLinks: true,
        maxThumbnailFilesize: 50,
        maxFiles: 10
    });

    dz.on("complete", file => {
        const removeBtn = file.previewElement.querySelector(".dz-remove");
        removeBtn.classList.add("btn-danger", "btn-sm", "btn");
        const response = JSON.parse(file.xhr.response);
        if(file.status === "success") {
            const btn = document.createElement("a");
            btn.classList.add("btn-primary", "btn-sm", "btn", "btnCopy");
            btn.textContent = "Copy URL";
            btn.addEventListener("click", () => navigator.clipboard.writeText(response.message));
            btn.setAttribute("href", "javascript:undefined;")
            removeBtn.after(btn);
        }else{
            file.previewElement.querySelector('.dz-error-message>span').textContent = response.message;
        }
    });
</script>
</body>
</html>
